{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "baseUrl": ".",
        "module": "ESNext",
        "target": "ES5",
        "lib": ["es6","dom"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "*.js"
    ]
}